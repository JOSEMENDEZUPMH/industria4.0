Pcorte=(Mcal1+Pcal1+Ical1)/3


if 0<Pcorte<7:

    print('tu promedio es insuficiente para solicitar beca')

elif 7<=Pcorte<=9:

    print('tienes posibilada de pedirle beca al DR Zeta')

else:
    9<Pcorte<=10

    print('exigele tu beca al DR Z')

print('promedio {}'.format(Pcorte))

